@model IEnumerable<EventsNTicketsApp.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("Administrator"))
    {
    @Html.ActionLink("Create New", "Create")
    }
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Block)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Block)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @if (User.IsInRole("Administrator") || User.IsInRole("Editor"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.TicketId })
            }
            |

            @Html.ActionLink("Details", "Details", new { id = item.TicketId }) |
            @if (User.IsInRole("Administrator"))
            {

                @Html.ActionLink("Delete", "Delete", new { id = item.TicketId })
            }
        </td>
    </tr>
}

</table>
